<%= form_for @gurume do |f| %>
  <div class="edit1">
   <div class="edit2">

<div class="field">
   <%= f.label :店名 %>
   <%= f.text_field :name, :size => 30 %>
 </div>

 <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
 </div>

 <div class="field">
  <%= f.label :最寄り駅 %>
  <%= f.text_field :station, :size => 30 %>
 </div>


<div class="field">
 <%= f.label :系統 %>
 <%= f.select :food_genre, 
 [["和食", "和食"], 
 ["洋食", "洋食"], 
 ["中華", "中華"],
 ["フレンチ", "フレンチ"],
 ["イタリアン", "イタリアン"],
 ["その他", "その他"]], include_blank: "選択して下さい" %>
</div>

<div class="field">
 <%= f.label :ジャンル %>
 <%= f.select :genre, 
 [["インスタ映え", "インスタ映え"], 
 ["女子会", "女子会"], 
 ["家族連れ", "家族連れ"],
 ["量重視", "量重視"],
 ["デート", "デート"],
 ["その他", "その他"]], include_blank: "選択して下さい" %>
</div>







<div class="hyouka1">
 総合評価
</div>
  <div class="post_form">
   <%= f.radio_button :star, 5 ,id: 'star1'%>
   <label for="star1"><span class="text"></span>★</label>

   <%= f.radio_button :star, 4 ,id: 'star2'%>
   <label for="star2"><span class="text"></span>★</label>

   <%= f.radio_button :star, 3 ,id: 'star3'%>
   <label for="star3"><span class="text"></span>★</label>

   <%= f.radio_button :star, 2 ,id: 'star4'%>
   <label for="star4"><span class="text"></span>★</label>

   <%= f.radio_button :star, 1 ,id: 'star5'%>
   <label for="star5"><span class="text"></span>★</label>
  </div>


  <div class="field">
   <%= f.label :コメント  %>
   <%= f.text_area :about, :size => "30x2" %>
  </div> 
        <%= f.submit "編集する" %>
   </div>
  </div>
<% end %>